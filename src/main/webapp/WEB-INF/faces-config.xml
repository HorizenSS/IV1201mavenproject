<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/account.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.success}</if>
            <to-view-id>/applicant.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/account.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.adminsuccess}</if>
            <to-view-id>/recruiter.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
  
    <navigation-rule>
        <from-view-id>/applicant.xhtml</from-view-id>
        <navigation-case>
            <if>#{applyManager.tohomepage}</if>
            <to-view-id>/account.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/recruiter.xhtml</from-view-id>
        <navigation-case>
            <if>#{recruitManager.tohomepage}</if>
            <to-view-id>/account.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>   
       
    <navigation-rule>
        <from-view-id>/applicant.xhtml</from-view-id>
        <navigation-case>
            <if>#{applyManager.error}</if>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>    
    
    <navigation-rule>
        <from-view-id>/recruiter.xhtml</from-view-id>
        <navigation-case>
            <if>#{recruitManager.error}</if>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>


        <navigation-rule>
        <from-view-id>/account.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.toaccountSV}</if>
            <to-view-id>/accountSV.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
           <navigation-rule>
        <from-view-id>/accountSV.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.toaccount}</if>
            <to-view-id>/account.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
              <navigation-rule>
        <from-view-id>/accountSV.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.toapplyconfirmation}</if>
            <to-view-id>/applyconfirmation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
                  <navigation-rule>
        <from-view-id>/account.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.toapplyconfirmation}</if>
            <to-view-id>/applyconfirmation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
                     <navigation-rule>
        <from-view-id>/applyconfirmation.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.toaccount}</if>
            <to-view-id>/account.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
                     <navigation-rule>
        <from-view-id>/applyconfirmation.xhtml</from-view-id>
        <navigation-case>
            <if>#{acctManager.toaccountSV}</if>
            <to-view-id>/accountSV.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
                         <navigation-rule>
        <from-view-id>/recruiter.xhtml</from-view-id>
        <navigation-case>
            <if>#{recruitManager.success}</if>
            <to-view-id>/applicant.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
